      <h2>User info</h2>
        <thead>
          <tr>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
          </tr>
        </thead>
        <table class = "table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </div>
        </tbody>
      </table>

      <div class ="row">
          <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
        <% end %>
      </div>

      <h2 class "mt-3 px-5 px-sm-0">New book</h2>
      <%= form_with model: book, local:true do |f| %>
      <% if book.errors.any? %>
            <%= book.errors.count %>error prohibited this obj from being saved:
            <% book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <div class="form-group">
          <p><label for="book_title">Title</label></p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <p><label for="book_opinion">Opinion</label></p>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>